<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Visio.ViewModels"
             xmlns:models="clr-namespace:Visio.Models"
             x:Class="Visio.Views.GalleryPage"
             x:DataType="vm:GalleryViewModel"
             Title="Galeria">

    <Grid RowDefinitions="Auto,*" Padding="20">
        
        <HorizontalStackLayout Grid.Row="0" Spacing="15" Margin="0,0,0,15">
            <Label Text="ðŸ“¸ Snapshots" 
                   FontSize="24" 
                   FontAttributes="Bold"
                   VerticalOptions="Center"/>
            
            <Label Text="{Binding ImageCount, StringFormat='{0} fotos'}"
                   FontSize="16"
                   TextColor="Gray"
                   VerticalOptions="Center"/>
            
            <Button Text="ðŸ”„ Atualizar"
                    Command="{Binding RefreshCommand}"
                    BackgroundColor="#2196F3"
                    TextColor="White"
                    HorizontalOptions="End"/>
        </HorizontalStackLayout>

        <ScrollView Grid.Row="1">
            <CollectionView ItemsSource="{Binding Images}"
                            SelectionMode="None">
                
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical"
                                     Span="3"
                                     HorizontalItemSpacing="15"
                                     VerticalItemSpacing="15"/>
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:ImageInfo">
                        <Border StrokeThickness="2"
                                Stroke="LightGray"
                                BackgroundColor="White"
                                Padding="5">
                            <Grid RowDefinitions="200,Auto,Auto">
                                
                                <Image Grid.Row="0"
                                       Source="{Binding FilePath}"
                                       Aspect="AspectFill"/>
                                
                                <Label Grid.Row="1"
                                       Text="{Binding FileName}"
                                       FontSize="12"
                                       Padding="5,10,5,5"
                                       LineBreakMode="TailTruncation"
                                       HorizontalTextAlignment="Center"/>
                                
                                <HorizontalStackLayout Grid.Row="2" 
                                                       Spacing="10" 
                                                       Padding="5"
                                                       HorizontalOptions="Center">
                                    <Button Text="Abrir"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:GalleryViewModel}}, Path=OpenImageCommand}"
                                            CommandParameter="{Binding FilePath}"
                                            BackgroundColor="#2196F3"
                                            TextColor="White"
                                            FontSize="12"/>
                                    
                                    <Button Text="ðŸ—‘ï¸ Deletar"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:GalleryViewModel}}, Path=DeleteImageCommand}"
                                            CommandParameter="{Binding FilePath}"
                                            BackgroundColor="Red"
                                            TextColor="White"
                                            FontSize="12"/>
                                </HorizontalStackLayout>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>
    </Grid>
</ContentPage>
